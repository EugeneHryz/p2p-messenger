<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="MessengerRedText">
        <item name="android:textColor">@color/wc_red</item>
    </style>

    <style name="MessengerOrangeText">
        <item name="android:textColor">@color/wc_orange</item>
    </style>

    <style name="MessengerYellowText">
        <item name="android:textColor">@color/wc_yellow</item>
    </style>

    <style name="MessengerLightGreenText">
        <item name="android:textColor">@color/wc_light_green</item>
    </style>

    <style name="MessengerGreenText">
        <item name="android:textColor">@color/wc_green</item>
    </style>

    <style name="MessengerButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
    </style>

    <style name="MessengerButton.Dark">
        <item name="backgroundTint">@color/mtrl_btn_bg_color_states</item>
    </style>

<!--    ?????-->
    <style name="MessengerToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="ShapeAppearance.App.Fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/fab_corner_radius</item>
    </style>
</resources>